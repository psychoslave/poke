<p id="notice"><%= notice %></p>

<h1>Types</h1>

<table>
  <thead>
    <tr>
      <th>Identifier</th>
      <th>Name</th>
      <th>Double damage from</th>
      <th>Double damage to</th>
      <th>Half damage from</th>
      <th>Half damage to</th>
      <th>No damage from</th>
      <th>No damage to</th>
      <th>Pokemon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @types.each do |type| %>
      <tr>
        <td><%= type.pokeapi_id %></td>
        <td><%= type.name %></td>
        <td><%= type.double_damage_from.map{|ens| ens.name}.join(', ') %></td>
        <td><%= type.double_damage_to.map{|ens| ens.name}.join(', ') %></td>
        <td><%= type.half_damage_from.map{|ens| ens.name}.join(', ') %></td>
        <td><%= type.half_damage_to.map{|ens| ens.name}.join(', ') %></td>
        <td><%= type.no_damage_from.map{|ens| ens.name}.join(', ') %></td>
        <td><%= type.no_damage_to.map{|ens| ens.name}.join(', ') %></td>
        <td><%= type.pokemons.map{|ens| ens.name}.join(', ') %></td>
        <td><%= link_to 'Show', type %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

